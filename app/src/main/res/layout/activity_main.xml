<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/emoji_widget_background">

        <com.mondeapp.emojis.widget.EmojiWidget
            android:id="@+id/emoji_widget"

            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/emoji_widget_tabbar"
                style="@style/EmojiWidgetTabBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/emoji_widget_button_text"
                        style="@style/EmojiWidgetTextButton"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_text" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/emoji_widget_topbar_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@android:color/transparent"
                    android:fadeScrollbars="false"
                    android:gravity="center"
                    android:layout_marginRight="6dip"
                    android:layout_marginLeft="6dip"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/emoji_widget_topbar_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_temporal"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_temporal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_faces"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_faces" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_celebrities"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_celebrities" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_animals"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_animals" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_nature"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_nature" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_fashion"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_fashion" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_love"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_love" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_weather"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_weather" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_food"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_food" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_sports"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_sports" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_transports"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_transport" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_office"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_office" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_technology"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_technology" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_numbers"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_numbers" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_hands"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_hands" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_flags"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_flags" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/emoji_widget_page_brands"
                                style="@style/EmojiWidgetTopButton"
                                android:src="@drawable/tab_icon_brands" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    style="@style/EmojiWidgetDeleteButton"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#b3b3b3"></View>

            <android.support.v4.view.ViewPager
                android:id="@+id/emoji_widget_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </com.mondeapp.emojis.widget.EmojiWidget>
    </LinearLayout>


</RelativeLayout>
